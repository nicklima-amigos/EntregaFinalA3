      "@platformsQueries/*": ["src/modules/platform/queries/*"],

      "@exceptions/*": ["src/exceptions/*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@middleware/*": ["src/middleware/*"],
      "@modules/*": ["src/modules/*"],
      "@types/*": ["src/types/*"]
    }
  }
}
